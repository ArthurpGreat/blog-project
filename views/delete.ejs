<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Post</title>
</head>
<body>
    <h1>Delete Post</h1>
    <p>Are you sure you want to delete the post with title: <%= post.title %>?</p>
    <!-- Form to submit the deletion -->
    <form action="/delete/<%= encodeURIComponent(post.title) %>?_method=DELETE" method="post">
        <button type="submit">Delete</button>
    </form>
    <!-- Button to cancel the deletion -->
    <a href="/">Cancel</a>
</body>
</html>
